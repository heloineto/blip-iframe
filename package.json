{
  "version": "0.0.4",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:extension": "turbo run dev --filter=blip-extension --filter=blip-iframe",
    "dev:desk": "turbo run dev --filter=blip-extension-messages-history --filter=blip-iframe",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.5.1",
    "turbo": "^1.10.14"
  },
  "packageManager": "pnpm@8.6.10"
}
